<mvc:View
    id="appView"
	controllerName="userzeiterfassung.ext.main.controller.Root"
    xmlns:tnt="sap.tnt"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
    <tnt:ToolPage>
        <tnt:header>
            <tnt:ToolHeader>
                <Title text="{i18n>appTitle}" />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation>
                <tnt:NavigationList
                    id="sideNavigation"
                    itemSelect=".onSelectNavigate">
                    <tnt:NavigationListItem
                        key="EntriesMain"
                        icon="sap-icon://table-view"
                        text="Main" />
                    <tnt:NavigationListItem
                        key="EntriesCalendar"
                        icon="sap-icon://calendar"
                        text="Calendar" />
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
		    <NavContainer
                id="myNavContainer"
                autoFocus="false" />
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>