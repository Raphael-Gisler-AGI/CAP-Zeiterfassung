<mvc:View
    controllerName="userzeiterfassung.ext.main.controller.Calendar"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:unified="sap.ui.unified"
    xmlns="sap.m">
    <ScrollContainer vertical="true" height="100%">
        <SinglePlanningCalendar
            enableAppointmentsCreate="true"
            enableAppointmentsDragAndDrop="true"
            enableAppointmentsResize="true"
            appointmentResize=".onResize"
            appointmentDrop=".onDrop"
            appointmentCreate=".onCreate"
            appointmentSelect=".onSelect"
            appointments="{/Entries}">
            <views>
                <SinglePlanningCalendarWeekView key="WeekView" title="Week"/>
                <SinglePlanningCalendarMonthView key="MonthView" title="Month"/>
                <SinglePlanningCalendarDayView key="DayView" title="Day"/>
            </views>
            <appointments>
                <unified:CalendarAppointment
                    title="{to_project/description}"
                    text="{description}"
                    startDate="{startTime}"
                    endDate="{endTime}"/>
            </appointments>
        </SinglePlanningCalendar>
    </ScrollContainer>
</mvc:View>