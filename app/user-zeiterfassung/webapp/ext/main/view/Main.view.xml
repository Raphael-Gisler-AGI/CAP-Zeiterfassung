<mvc:View
    controllerName="userzeiterfassung.ext.main.controller.Main"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:macros="sap.fe.macros"
    xmlns:macrosTable="sap.fe.macros.table">
    <macros:FilterBar
        id="FilterBar"
        metaPath="@com.sap.vocabularies.UI.v1.SelectionFields"
        contextPath="/Entries"
        liveMode="true" />
    <macros:Table
        id="LineItemTable"
        metaPath="@com.sap.vocabularies.UI.v1.LineItem"
        contextPath="/Entries"
        selectionMode="ForceMulti"
        filterBar="FilterBar"
        header="Entries">
        <macros:actions>
            <macrosTable:Action
                key="createAction"
                text="Create"
                press=".onPressCreateEntry"
                placement="After"
                requiresSelection="false" />
            <macrosTable:Action
                key="deleteAction"
                text="Delete"
                press=".onPressDeleteEntries"
                placement="After"
                requiresSelection="false" />
        </macros:actions>
    </macros:Table>
</mvc:View>