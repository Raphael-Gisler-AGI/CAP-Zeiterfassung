<Dialog
    id="entryDialog"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <beginButton>
        <Button
            press=".onPressSaveEntryDialog"
            text="Create" />
    </beginButton>
    <endButton>
        <Button
            press=".onPressCloseEntryDialog"
            text="Close" />
    </endButton>
    <content>
        <form:SimpleForm>
            <Label text="{i18n>description}" />
            <TextArea
                value="{description}" />
            <Label text="{i18n>project}" />
            <Select
                selectedKey="{to_project_ID}"
                forceSelection="false"
                items="{/Projects}">
                <core:Item
                    key="{ID}"
                    text="{description}" />
            </Select>
            <Label text="{i18n>startTime}" />
            <TimePicker
                dateValue="{startTime}" />
            <Label text="{i18n>endTime}" />
            <TimePicker
                dateValue="{startTime}" />
            <Label text="{i18n>timer}" />
            <Select
                selectedKey="{to_ticket_ID}"
                forceSelection="false"
                items="{/Tickets}">
                <core:Item
                    key="{ID}"
                    text="{number} {description}" />
            </Select>
        </form:SimpleForm>
    </content>
</Dialog>