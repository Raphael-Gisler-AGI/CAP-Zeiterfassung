<Dialog
    id="entryDialog"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    title="Entry">
    <beginButton>
        <Button
            press=".onPressSaveEntryDialog"
            type="Emphasized"
            text="Save" />
    </beginButton>
    <endButton>
        <Button
            press=".onPressCancelEntryDialog"
            type="Ghost"
            text="Cancel" />
    </endButton>
    <form:SimpleForm>
        <Label text="Description" />
        <TextArea
            required="true"
            value="{description}" />
        <Label text="Categories" />
        <Select
            required="true"
            forceSelection="false"
            selectedKey="{category_ID}"
            items="{/Categories}">
            <core:Item
                key="{ID}"
                text="{name}" />
        </Select>
        <Label text="Start Time" />
        <DateTimePicker
            dateValue="{startTime}"
            minutesStep="15"
            required="true" />
        <Label text="End Time" />
        <DateTimePicker
            dateValue="{endTime}"
            minutesStep="15"
            required="true" />
        <Label text="Ticket" />
        <Select
            forceSelection="false"
            selectedKey="{ticket_ID}"
            items="{/Tickets}">
            <core:Item
                key="{ID}"
                text="#{number} {description}" />
        </Select>
    </form:SimpleForm>
</Dialog>