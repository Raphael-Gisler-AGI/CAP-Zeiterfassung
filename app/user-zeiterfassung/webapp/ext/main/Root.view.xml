<mvc:View
    id="myRootView"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    controllerName="userzeiterfassung.ext.main.Navigation">
    <tnt:ToolPage>
        <tnt:header>
            <tnt:ToolHeader>
                <Title text="{i18n>appTitle}" />
                <ToolbarSpacer />
                <Button
                    press=".onPressCreateEntry"
                    type="Emphasized"
                    icon="sap-icon://add"
                    text="Create Entry" />
                <ToolbarSeparator />
                <Button
                    press=".onPressTimer"
                    type="Ghost"
                    icon="sap-icon://fob-watch" />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation>
                <tnt:NavigationList
                    id="sideNavigation"
                    itemSelect=".onSelectNavigate">
                    <tnt:NavigationListItem
                        key="EntriesMain"
                        icon="sap-icon://table-view"
                        text="Main" />
                    <tnt:NavigationListItem
                        key="EntriesCalendar"
                        icon="sap-icon://calendar"
                        text="Calendar" />
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer id="appContent" autoFocus="false" />
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>