<mvc:View
    controllerName="zeiterfassung.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Table items="{/Entries}">
        <columns>
            <Column>
                <Text text="Description" />
            </Column>
            <Column>
                <Text text="Category" />
            </Column>
            <Column>
                <Text text="Time" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <Text text="{description}" />
                <Text text="{category/name}" />
                <Text text="{startTime} - {endTime}" />
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
