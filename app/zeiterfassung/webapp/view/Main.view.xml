<mvc:View
    controllerName="zeiterfassung.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Table
        items="{
        path: '/Entries',
        sorter : {
            path : 'startTime',
            descending: true,
            group : '.formatter.getEntryGroup'
        }

    }">
        <columns>
            <Column>
                <Text text="Description" />
            </Column>
            <Column>
                <Text text="Category" />
            </Column>
            <Column>
                <Text text="Time" />
            </Column>
            <Column hAlign="End">
                <Text text="Edit" />
            </Column>
            <Column hAlign="End">
                <Text text="Delete" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <Text text="{description}" />
                <Text text="{category/name}" />
                <Text
                    text="{
                        parts: [
                            'startTime',
                            'endTime'
                        ],
                        formatter: '.formatter.getEntryTime'
                    }" />
                <Button
                    press=".onPressEdit"
                    icon="sap-icon://edit" />
                <Button
                    press=".onPressDelete"
                    icon="sap-icon://delete" />
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>