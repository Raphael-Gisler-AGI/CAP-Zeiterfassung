<mvc:View
    controllerName="zeiterfassung.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:macros="sap.fe.macros"
    xmlns="sap.m">
    <macros:Table
        id="LineItemTable"
        metaPath="/Entries/@com.sap.vocabularies.UI.v1.LineItem"
        readOnly="true"  />
    <Table items="{/Entries}">
        <columns>
            <Column>
                <Text text="Time" />
            </Column>
            <Column>
                <Text text="Description" />
            </Column>
            <Column>
                <Text text="Category" />
            </Column>
            <Column hAlign="End">
                <Text text="Edit" />
            </Column>
            <Column hAlign="End">
                <Text text="Delete" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <Text
                    text="{
                        parts: [
                            'startTime',
                            'endTime'
                        ],
                        formatter: '.formatter.getEntryTime'
                    }" />
                <Text text="{description}" />
                <Text text="{category/name}" />
                <Button
                    press=".onPressEdit"
                    icon="sap-icon://edit" />
                <Button
                    press=".onPressDelete"
                    icon="sap-icon://delete" />
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>