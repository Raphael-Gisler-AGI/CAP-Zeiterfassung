<mvc:View xmlns:unified="sap.ui.unified"
	controllerName="zeiterfassung.controller.Calendar"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<ScrollContainer
		vertical="true"
		height="100%">
		<SinglePlanningCalendar
		 	id="singlePlanningCalendar"
			appointments="{/Entries}"
			stickyMode="All">
			<appointments>
				<unified:CalendarAppointment
					id="calendarTemplate"
					key="{ID}"
					title="{category/name}"
					description="{description}"
					startDate="{startTime}"
					endDate="{endTime}" />
			</appointments>
		</SinglePlanningCalendar>
	</ScrollContainer>
</mvc:View>