<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <ResponsivePopover
        title="{category/name}"
        placement="Auto">
        <content>
            <f:SimpleForm>
                <Label text="Description" />
                <Title text="{description}" />
                <Label text="Duration" />
                <Text
                    text="{
                        parts: [
                            'startTime',
                            'endTime'
                        ],
                        formatter: '.formatter.getEntryTime'
                    }" />
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button
                press=".onPressDetailsEdit"
                icon="sap-icon://edit"
                text="Edit" />
        </beginButton>
        <endButton>
            <Button
                press=".onPressDetailsDelete"
                icon="sap-icon://delete"
                text="Delete" />
        </endButton>
    </ResponsivePopover>
</core:FragmentDefinition>