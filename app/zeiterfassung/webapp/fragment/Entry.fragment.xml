<Dialog
    id="entryDialog"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m">
    <beginButton>
        <Button
            press=".onPressCreateEntryDialog"
            type="Emphasized"
            text="Create" />
    </beginButton>
    <endButton>
        <Button
            press=".onPressCancelEntryDialog"
            type="Ghost"
            text="Cancel" />
    </endButton>
    <form:SimpleForm>
        <Label text="Description" />
        <TextArea
            required="true"
            value="{description}" />
        <Label text="Categories" />
        <Select
            required="true"
            forceSelection="false"
            selectedKey="{category_ID}"
            items="{/Categories}">
            <core:Item
                key="{ID}"
                text="{name}" />
        </Select>
    </form:SimpleForm>
</Dialog>