<Dialog xmlns:core="sap.ui.core"
    id="entryDialog"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">
    <beginButton>
        <Button
            press="onPressSaveEntry"
            text="Save" />
    </beginButton>
    <endButton>
        <Button
            press=".onCloseDialog"
            text="Cancel" />
    </endButton>
    <form:SimpleForm>
        <Label text="Description" />
        <TextArea value="{description}" />
        <Label text="Category" />
        <Select
            selectedKey="{category_ID}"
            items="{/Categories}">
            <core:Item
                key="{ID}"
                text="{name}" />
        </Select>
    </form:SimpleForm>
</Dialog>