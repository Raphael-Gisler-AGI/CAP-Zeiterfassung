<Dialog xmlns:core="sap.ui.core"
    id="categoryDialog"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">
    <beginButton>
        <Button
            press="onPressSaveCategory"
            text="Save" />
    </beginButton>
    <endButton>
        <Button
            press=".onCloseDialog"
            text="Cancel" />
    </endButton>
    <form:SimpleForm>
        <Label text="Name" />
        <Input value="{name}" />
        <Label text="Category Type" />
        <Input value="{categoryType}" />
    </form:SimpleForm>
</Dialog>