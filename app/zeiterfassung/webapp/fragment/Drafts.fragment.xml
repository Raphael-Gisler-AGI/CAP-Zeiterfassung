<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ResponsivePopover
        title="Unsaved Changes"
        titleAlignment="Center"
        placement="Bottom">
        <content>
            <List
                id="draftsPopoverList"
                items="{/getEntriesDrafts()}">
                <InputListItem
                    id="draftsPopoverListTemplate"
                    label="{description}">
                    <content>
                        <Button
                            press="onPressDraftPopoverEdit"
                            icon="sap-icon://edit" />
                        <Button
                            press="onPressDraftPopoverDelete"
                            icon="sap-icon://delete" />
                    </content>
                </InputListItem>
            </List>
        </content>
    </ResponsivePopover>
</core:FragmentDefinition>
