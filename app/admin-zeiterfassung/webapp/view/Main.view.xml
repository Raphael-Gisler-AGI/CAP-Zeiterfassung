<mvc:View
    controllerName="adminzeiterfassung.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Table items="{/Projects}">
        <headerToolbar>
            <OverflowToolbar>
                <Title
                    titleStyle="H3"
                    text="Projects" />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Name" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <Text text="{description}" />
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>