{
  "name": "cap-zeiterfassung",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.10.0",
    "@sap-cloud-sdk/resilience": "^3.10.0",
    "@sap/cds": "^7",
    "cds-swagger-ui-express": "^0.6.0",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/ux-specification": "^1.120.1",
    "sqlite3": "^5.1.6"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-zeiterfassung": "cds watch --open zeiterfassung/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-admin-zeiterfassung": "cds watch --open admin-zeiterfassung/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-user-zeiterfassung": "cds watch --open user-zeiterfassung/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "auth": {
        "kind": "mocked"
      },
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        },
        "schema_evolution": "auto"
      },
      "API_PROJECT_V3": {
        "kind": "odata",
        "model": "srv/external/API_PROJECT_V3"
      }
    }
  },
  "sapux": [
    "app/user-zeiterfassung",
    "app/user-zeiterfassung",
    "app/user-zeiterfassung",
    "app/user-zeiterfassung"
  ]
}
